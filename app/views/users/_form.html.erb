<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :identification %>
    <%= f.text_field :identification %>
  </div>

  <div class="field">
    <%= f.label :identification_type %>
    <%= f.select :identification_type, User.identification_types %>
  </div>

  <div class="field">
    <%= f.label :student_code %>
    <%= f.text_field :student_code %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, placeholder: "@uniandes.edu.co" %>
  </div>

  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :photo %>
    <%= f.text_field :photo %>
  </div>

  <div class="field">
    <%= f.label :semester %>
    <%= f.number_field :semester %>
  </div>

  <div class="field">
    <%= f.label :careers %>
    <%= f.text_area :careers %>
  </div>

  <div class="field">
    <%= f.label :volunteering_agreement %>
    <%= f.text_field :volunteering_agreement %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
